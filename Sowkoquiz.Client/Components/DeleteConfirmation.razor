@using Blazored.Modal
@using Blazored.Modal.Services

<div class="fixed inset-0 z-50 flex items-center justify-center bg-gray-600 bg-opacity-50 backdrop-blur-sm">
    <div class="bg-white p-6 rounded-lg shadow-lg">
        <h2 class="text-xl font-semibold mb-4">Confirm Delete</h2>
        <p class="mb-6">Are you sure you want to delete this quiz?</p>
        <div class="flex justify-end space-x-4">
            <button @onclick="Close" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Yes</button>
            <button @onclick="Cancel" class="px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600">No</button>
        </div>
    </div>
</div>

@code {
    [CascadingParameter] BlazoredModalInstance BlazoredModal { get; set; } = default!;

    async Task Close() =>  await BlazoredModal.CloseAsync(ModalResult.Ok(true));
    async Task Cancel() => await BlazoredModal.CancelAsync();
}

