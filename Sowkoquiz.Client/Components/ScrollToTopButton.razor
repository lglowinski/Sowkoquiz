@inject IJSRuntime JsRuntime

<button @onclick="ScrollToTop" class="scroll-to-top hidden fixed bottom-4 right-4 z-50 w-10 h-10 bg-blue-500 text-white rounded-full flex items-center justify-center shadow-md hover:bg-blue-700 transition-opacity duration-300">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10">
        <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 15.75 7.5-7.5 7.5 7.5" />
    </svg>

</button>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JsRuntime.InvokeVoidAsync("registerScrollListener");
        }
    }

    private async Task ScrollToTop()
    {
        await JsRuntime.InvokeVoidAsync("scrollToTop");
    }
}